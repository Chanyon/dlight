import {View} from "@dlightjs/dlight";
import {_, button, div, Prop, State, tag} from "@dlightjs/useless";
import {Case, Switch} from "@dlightjs/components";
import {css} from "@emotion/css";


class TT extends View {
    @Prop _$content = 1

    Body() {
        div(`I am TT: ${this._$content}`)
    }
}

export class TestTest extends View {
    @State text = ""
    @State apples = [1,2,3]
    @State orange = [1,2,3]
    @State toggle = true
    @State hh = 1
    @State fine = 2
    @State curId = 1
    asts = []

    @View
    MyButton({aa}): any {
        div(`zheshi ${aa}`)
    }

    Body() {
        for(let i of this.orange) {
            button("click")
                .className(css`
                background-color: ${i===this.curId?"red":""};
            `)
                .onclick(() => {
                    this.curId = i
                    this.hh ++
                    this.apples[0] ++
                    this.apples = [...this.apples]
                })
        }
        for (let apple of this.apples) {
            this.MyButton()
                .aa(apple)
        }


    }
}
