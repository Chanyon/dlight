import {View, Derived, DotProp, Effect, Prop, PropDerived, State, Environment} from "@/core";


class SubEl3 extends View {
    @Prop a: number
    @Environment what
    @Environment id
    Body() {
        button("+")
            .onclick(() => {
                this.what ++
                this.id += "uck"
            })

        button("-")
            .onclick(() => {
                this.what --
                this.id += "f"
            })
        div(this.what)
        div(this.id)
        div(this.a)
    }
}

class SubEl2 extends View {
    @Prop a: number

    Body() {
        div(this.a)
        SubEl3({a: this.a+1})
    }
}

class SubEl1 extends View {
    @Prop a: number

    Body() {
        div(this.a)
        SubEl2({a: this.a+1})

    }

}

